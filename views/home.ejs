<!DOCTYPE html>
<html>

<head>
    <title>DriveIt - Dropbox</title>

    <!-- Mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Twitter Bootstrap -->
    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">

    <!-- Material Design for Bootstrap -->
    <link href="/public/bootstrap-material-design-master/dist/css/material-wfont.min.css" rel="stylesheet">
    <link href="/public/bootstrap-material-design-master/dist/css/ripples.min.css" rel="stylesheet">

    <!-- Dropdown.js -->
    <link href="//cdn.rawgit.com/FezVrasta/dropdown.js/master/jquery.dropdown.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.0/animate.min.css" rel="stylesheet">

    <link href="../public/css/home.css" rel="stylesheet">



    <!-- jQuery -->
    <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>

</head>
<body>


<div class="header-panel shadow-z-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-3">
                <h1 class="logo ">Drive It</h1>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid main">
    <div class="row">
        <nav class="col-xs-2 menu">
            <ul>
                <a href="/home?path=/"> <li class="active withripple">Home</li></a>
                <a href="/logout" ><li>Logout</li></a>

            </ul>
        </nav>
    </div>

    <div class="pages col-xs-10">
        <div class="col-xs-10">
            <div class="well page active animated fadeInUp" id="about">
                <h1 class="header">
                    <img src="https://dt8kf6553cww8.cloudfront.net/static/images/icons/blue_dropbox_glyph-vflJ8-C5d.png" style="height: 10%">
                    Dropbox
                    <div class="col-md-5 pull-right">
                        <input id="search" name="search" class="form-control empty" placeholder="Search..." type="text" data-list=".list-group">
                    </div>

                </h1>
                <a class="pull-right" onclick="window.history.back()" id="back">Back</a>
                <div id="path" ></div>
                <br>

                <ul class="list-group" id="page">

                    <%for(var i = 0 ; i < name.length ; i++){%>
                        <li>
                        <div class="list-group-item">
                        <div class="row-action-primary">
                            <%if(name[i].isFolder){%>
                            <i class="mdi-file-folder"></i>
                            <%}else{%>
                            <i class="mdi-action-description"></i>
                            <%}%>
                        </div>
                        <div class="row-content">
                            <div class="least-content"><%= name[i].date%></div>

                            <%if(!name[i].isFolder){%>
                            <h4 class="list-group-item-heading"><%= name[i].name%></h4>
                            <p class="list-group-item-text"><%= name[i].size%></p>
                            <%}else{%>
                            <h4 class="list-group-item-heading"><a href="/getData?path=<%= name[i].path%>"><%= name[i].name%></a></h4>

                            <%}%>
                        </div>
                        <div class="list-group-separator"></div>

                        </div>
                        </li>
                    <%}%>

                </ul>

                <div class="pager ">

                </div>
            </div>


        </div>
    </div>
</div>
</body>
<script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.1/js/bootstrap.min.js"></script>

<!-- Material Design for Bootstrap -->
<script src="/public/bootstrap-material-design-master/dist/js/material.min.js"></script>
<script src="/public/bootstrap-material-design-master/dist/js/ripples.min.js"></script>
<script>
    $.material.init();
</script>




<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script src="/public/js/jquery.hideseek.min.js"></script>
<script src="/public/js/Jpages.min.js"></script>

<script>
    $(document).ready(function() {
        $('#search').hideseek();
        var url = document.URL;
        var path = url.split("=")
        $('#path').html("Current folder " + path[1].split('%20').join(' '));
        if(path[1] == "/"){
            $('#back').hide();
        }

    });

    $(function() {
        $(".pager").jPages({
            containerID  : "page",
            perPage      : 5,
            startPage    : 1,
            startRange   : 1,
            midRange     : 5,
            endRange     : 1
        });
    });

</script>
</html>